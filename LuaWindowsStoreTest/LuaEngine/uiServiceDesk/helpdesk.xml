<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/mainrootlayout" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lua="http://schemas.android.com/apk/res/com.Resto" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:background="#2A6897">
<LGLinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="0.9"
	android:orientation="horizontal">
	<LGLinearLayout android:focusable="true"
                android:focusableInTouchMode="true" android:layout_width="0px"
                android:layout_height="0px">
	</LGLinearLayout>
	<LGComboBox
	    lua:id="helpdeskCBStatus"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#DDDDDD">	    
	</LGComboBox>
</LGLinearLayout>
<LGListView
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	lua:id="helpdeskList"
	android:layout_weight="0.1"
	android:layout_margin="1dp"
	android:divider="@android:color/transparent"
	android:background="#EE2A6897"
>
</LGListView>
</LinearLayout>