<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
	android:id="@+id/mainrootlayout" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:lua="http://schemas.android.com/apk/res/com.Resto" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:orientation="horizontal" 
	android:background="@android:color/transparent">
	<LGLinearLayout
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="0.35"
		android:orientation="vertical">
		<LGTextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			lua:id="helpdeskAdapterTVTitle"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="2dp"
			android:text="Title"
			android:textSize="10dp"
			android:textColor="#DDDDDD">
		</LGTextView>
		<LGTextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			lua:id="helpdeskAdapterTVDateCreated"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:text="Date"
			android:textSize="10dp"
			android:textColor="#DDDDDD">
		</LGTextView>
	</LGLinearLayout>
	<LGLinearLayout
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="0.65"
		android:orientation="vertical">
		<LGTextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			lua:id="helpdeskAdapterTVState"
			android:layout_marginRight="2dp"
			android:layout_marginTop="2dp"
			android:text="State"
			android:gravity="right"
			android:textSize="10dp"
			android:textColor="#DDDDDD">
		</LGTextView>
		<LGTextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			lua:id="helpdeskAdapterTVPriority"
			android:layout_marginRight="2dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:text="Priority"
			android:gravity="right"
			android:textSize="10dp"
			android:textColor="#DDDDDD">
		</LGTextView>
	</LGLinearLayout>
</LinearLayout>