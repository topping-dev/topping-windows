<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/mainrootlayout" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lua="http://schemas.android.com/apk/res/com.Resto" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:background="#2A6897">
<LGScrollView
    android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<LGLinearLayout
    lua:id="helpdeskinfoLLMain"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
	<LGTextView
	    lua:id="helpdeskinfoTVTitle"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="4dp"
		android:textSize="14dp"
		android:textColor="#DDDDDD">
	</LGTextView>
	<LGTextView
	    lua:id="helpdeskinfoTVDescription"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="4dp"
		android:minLines="6"
		android:textColor="#DDDDDD">
	</LGTextView>
	<LGLinearLayout android:focusable="true"
                android:focusableInTouchMode="true" android:layout_width="0px"
                android:layout_height="0px">
	</LGLinearLayout>
	<LGLinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginBottom="4dp">
		<LGTextView
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.80"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center_vertical"
			android:text="Öncelik"
			android:textSize="12dp"
			android:textColor="#DDDDDD">
		</LGTextView>
		<LGComboBox 
		    lua:id="helpdeskinfoCBPriority"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.20"
			android:textColor="#DDDDDD">
		</LGComboBox>
	</LGLinearLayout>
	<LGLinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<LGTextView
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.80"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center_vertical"
			android:text="Durum"
			android:textSize="12dp"
			android:textColor="#DDDDDD">
		</LGTextView>
		<LGComboBox 
		    lua:id="helpdeskinfoCBStatus"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.2"
			android:textColor="#DDDDDD">
		</LGComboBox>
	</LGLinearLayout>
	<LGButton
	    lua:id="helpdeskinfoButSave"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:text="Kaydet"
		android:textColor="#DDDDDD">
	</LGButton>
	<LGLinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<LGButton
		    lua:id="helpdeskinfoButTasks"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:layout_marginRight="2dp"
			android:layout_marginBottom="2dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="Görevler"
			android:textColor="#DDDDDD">
		</LGButton>
		<LGButton
		    lua:id="helpdeskinfoButActivities" 
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="0.5"
			android:layout_marginBottom="2dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="Etkinlikler"
			android:textColor="#DDDDDD">
		</LGButton>
	</LGLinearLayout>
</LGLinearLayout>
</LGScrollView>
</LinearLayout>