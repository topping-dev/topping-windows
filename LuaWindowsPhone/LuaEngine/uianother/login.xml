<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/mainrootlayout" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:lua="http://schemas.android.com/apk/res/com.Resto" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:background="#2A6897">
<LGImageView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:scaleType="center"
	android:margin_top="5dp"
	android:margin_bottom="5dp"
	android:src="@drawable/merkut">
</LGImageView>
<LGTextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Kullanıcı"
	android:layout_marginTop="2dp"
	android:layout_marginLeft="2dp"
	android:layout_marginRight="2dp"
	android:textColor="#DDDDDD">
</LGTextView>
<LGEditText
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	lua:id="loginUsername"
	android:layout_marginLeft="2dp"
	android:layout_marginRight="2dp"
	android:singleLine="true"
	android:textColor="#DDDDDD">
</LGEditText>
<LGTextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Şifre"
	android:layout_marginLeft="2dp"
	android:layout_marginRight="2dp"
	android:textColor="#DDDDDD">
</LGTextView>
<LGEditText
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	lua:id="loginPassword"
	android:layout_marginLeft="2dp"
	android:layout_marginRight="2dp"
	android:singleLine="true"
	android:inputType="textPassword"
	android:textColor="#DDDDDD">
</LGEditText>
<LGButton
	lua:id="loginLoginButton"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Giriş"
	android:layout_marginTop="2dp"
	android:layout_marginLeft="2dp"
	android:layout_marginRight="2dp"
	android:textColor="#DDDDDD">
</LGButton>
</LinearLayout>